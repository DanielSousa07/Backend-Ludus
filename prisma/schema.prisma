generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum AuthProvider {
  LOCAL
  GOOGLE
}

model User {
  id    String  @id @default(uuid())
  name  String
  email String  @unique
  phone String? @unique

  emailVerified         Boolean   @default(false)
  emailVerificationCode String?
  emailCodeExpiresAt    DateTime?
  lastEmailSentAt       DateTime?

  phoneVerified    Boolean   @default(false)
  verificationCode String?
  codeExpiresAt    DateTime?
  lastCodeSentAt   DateTime?

  points Int @default(0)
  level  Int @default(1)

  senhaHash     String?
  googleSub     String? @unique
  authProvider  AuthProvider @default(LOCAL)

  role      String @default("USER")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  games       Game[]
  rentals     Rental[]
  ratings     GameRating[]
  pointsLogs  UserPointsLog[]
}

model Game {
  id          String  @id @default(uuid())
  ludopediaId Int?
  title       String
  description String?
  price       Float
  available   Boolean @default(true)
  cover       String?
  allowOriginalRental Boolean @default(true)

  rating       Float @default(0)
  ratingsCount Int?

  minPlayers Int  @default(1)
  maxPlayers Int?
  minAge     Int  @default(0)
  minTime    Int  @default(0)
  maxTime    Int?

  userId String
  owner  User   @relation(fields: [userId], references: [id])

  rentals Rental[]
  ratings GameRating[]
  copies GameCopy[]
}

model UserPointsLog {
  id        String   @id @default(uuid())
  userId    String
  points    Int
  reason    String
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id])

  @@index([userId])
}

model GameCopy {
  id        String   @id @default(uuid())
  number    Int
  code      String?
  condition String?
  available Boolean  @default(true)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  gameId String
  game   Game @relation(fields: [gameId], references: [id])

  rentals Rental[]

  @@unique([gameId, number])
}

model GameRating {
  id       String   @id @default(uuid())
  value    Int
  createdAt DateTime @default(now())
  updateAt DateTime @updatedAt

  userId String
  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)

  gameId String
  game   Game  @relation(fields: [gameId], references: [id], onDelete: Cascade)

  @@unique([userId, gameId])
}

enum RentalStatus {
  PENDING
  ACTIVE
  RETURNED
  CANCELED
}

model Rental {
  id        String       @id @default(uuid())
  startDate DateTime     @default(now())
  endDate   DateTime
  status    RentalStatus @default(PENDING)

  userId String
  user   User   @relation(fields: [userId], references: [id])

  gameId String
  game   Game   @relation(fields: [gameId], references: [id])

  copyId String?
  copy   GameCopy? @relation(fields: [copyId], references: [id])

  @@index([gameId])
  @@index([copyId])
  @@index([userId])
}